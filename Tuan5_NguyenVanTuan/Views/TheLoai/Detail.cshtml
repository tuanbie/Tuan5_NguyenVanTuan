
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>
<fieldset>
    <div class="display-label">Mã loại: @Model.maloai</div>
    <div class="display-label">Tên loại: @Model.tenloai</div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        @Html.ActionLink("Delete", "Delete", new { id = Model.maloai }) |
        @Html.ActionLink("Edit", "Edit", new { id = Model.maloai }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


